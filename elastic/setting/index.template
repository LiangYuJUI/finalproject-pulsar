{
  "index_patterns": ["log-*"],
  "template": {
    "settings": {
      "number_of_replicas": 0,
      "number_of_shards": 1,
      "index.lifecycle.name": "hot-warm-cold",
      "index.lifecycle.rollover_alias": "log",
      "default_pipeline": "add-current-time"
    },
    "mappings": {
      "properties": {
        "@timestamp": {
          "type": "date"
        },
        "message": {
          "type": "text"
        }
      }
    }
  }
}
